#!/bin/bash

echo "System Report generated by $(whoami), $(date)"

echo "
System Information
------------------"

echo "Hostname: $(hostname)"


source /etc/os-release
echo "OS: $PRETTY_NAME"


echo "Uptime: $(uptime -p)"

echo "
Hardware Information
--------------------"

echo -n "cpu: "
lshw -class processor | grep -A 2 "CPU" | grep "product" | awk '{$1=""; print $0}'

echo "Speed: $(lscpu | grep "CPU MHz" | awk '{print $3}') MHz"


echo "Ram: $(free -h | grep Mem | awk '{print $2}')"


echo -n "Disk(s): "
lsblk -d -o name,size | grep -v "NAME" | awk '{print $1, $2}'

echo "Video: Not available"

echo "
Network Information
-------------------"

echo "FQDN: $(hostname -f)"


echo "Host Address: $(hostname -I | awk '{print $1}')"


echo "DNS Server: $(systemd-resolve --status | grep "DNS Servers" | awk '{print $3}')"

echo -n "InterfaceName: "
ip link | grep "^[0-9]" | cut -d':' -f2 | sed 's/^ *//'


echo "IP Address: $(ip address show | grep inet | grep -v "127.0.0.1" | awk '{print $2}')"

echo "
System Status
-------------"


echo "Users Logged In: $(who | cut -d' ' -f1 | sort | uniq | tr '\n' ',')"


echo -n "Disk Space: "
df -h --output=target,avail | tail -n +2 | awk '{print $1, $2}'


echo "Process Count: $(ps -e | wc -l)"


echo "Load Averages: $(cat /proc/loadavg | awk '{print $1",", $2",", $3}')"


echo "Memory Allocation: $(free -h | grep Mem | awk '{print $4}')"


echo "UFW Rules: $(sudo ufw show added | grep "Added" | awk '{print $2}')"
